<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="../assets//Images/favicon.ico">
    <title>Shikshak Shaakha</title>
    <link href="../assets/Contact.css" rel="stylesheet">
</head>

<body>

    <% if(cuser){ %>
        <%- include('./UpdateNav.ejs') %>
    <% }else{ %>
      <%- include('./Navbar.ejs') %>
    <% } %>
    
        <section class="ftco-section">
            <div class="container mt-5 pt-5">
                <div class="row mt-5 justify-content-center">
                    <div class="col-lg-10 col-md-12">
                        <div class="wrapper">
                            <div class="row justify-content-center">
                                <div class="col-lg-5 d-block">
                                    <h3 class="mb-5 mt-4 text-center heading">Get in touch with us</h3>
                                    <div class="row mt-5 d-block">
                                        <div class="col-md-4 col-md-4 col-10 mx-auto" style="width: 100%;">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="fa fa-map-marker"></span>
                                            </div>
                                            <div class="text text-center">
                                                <p><span>Address:</span>255, Rawatbhata Road, Kota, India</p>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mx-auto" style="width: 100%;">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="fa fa-phone"></span>
                                            </div>
                                            <div class="text text-center">
                                                <p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mx-auto" style="width: 100%;">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="fa fa-paper-plane"></span>
                                            </div>
                                            <div class="text text-center">
                                                <p><span>Email:</span> <a
                                                        href="mailto:info@yoursite.com">shikshakshaakha@gmail.com</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-8 col-10 m-4">
                                    <div class="contact-wrap">
                                        <form action="/contact" method="POST" id="contactForm" name="contactForm"
                                            class="contactForm">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" name="name" id="name"
                                                            placeholder="Name" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <input type="email" class="form-control" name="email" id="email"
                                                            placeholder="Email" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" name="subject"
                                                            id="subject" placeholder="Subject" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <textarea name="message" class="form-control" id="message"
                                                            cols="30" rows="8" placeholder="Message"
                                                            required></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 mb-4">
                                                    <div class="form-group submit-btn">
                                                        <input type="submit" value="Send Message"
                                                            class="btn btn-primary">
                                                        <div class="submitting"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
</body>

</html>